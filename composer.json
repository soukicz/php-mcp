{
  "name": "soukicz/mcp",
  "description": "PHP implementation of Model Context Protocol (MCP) server with PSR-7 support",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "llm",
    "ai",
    "psr-7",
    "json-rpc",
    "tools",
    "claude",
    "anthropic"
  ],
  "type": "library",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/soukicz/php-mcp",
  "support": {
    "issues": "https://github.com/soukicz/php-mcp/issues",
    "source": "https://github.com/soukicz/php-mcp"
  },
  "autoload": {
    "psr-4": {
      "Soukicz\\Mcp\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Soukicz\\Mcp\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Petr Soukup",
      "email": "soukup@simplia.cz"
    }
  ],
  "require": {
    "php": "^8.1",
    "psr/http-message": "^1.0|^2.0",
    "guzzlehttp/psr7": "^2.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^10.5"
  }
}
